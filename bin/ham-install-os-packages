#!/bin/bash
. "$HAM_HOME/bin/ham-bash-setenv.sh"

case $HAM_OS in
    NT*)
        echo "### No extra packages need to be installed on Windows ###"
        ;;
    OSX)
        echo "### Installing packages required by ham on OSX (brew) ###"
        # Install brew
        if [ -z `which brew` ]; then
            echo "I/Brew not installed, installing..."
            /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
        fi
        # Install packages
        # Note: We install bash to get bash 5, you'll want to set
        # `/usr/local/bin/bash` as the default shell in the Terminal's
        # preferences General section. Note that ham needs bash and macOS has
        # deprecated it so this is something you'll want to do even if bash 3
        # is still available on your machine.
        HOMEBREW_NO_AUTO_UPDATE=1 brew install bash jq yq wget doxygen lftp
        ;;
    LINUX)
        if [ $(type apt-get 2>/dev/null | wc -l) = 1 ]; then
            echo "### Installing packages required by ham on Linux (apt-get) ###"
            echo "I/Installing apt-get packages"
            sudo apt-get -y install xsltproc p7zip-full git curl python3-pip gcc g++ clang ffmpeg libcurl4-openssl-dev mesa-common-dev mesa-utils freeglut3-dev libsdl2-dev ntpdate lftp
        elif [ $(type pacman 2>/dev/null | wc -l) = 1 ]; then
            echo "### Installing packages required by ham on Linux (pacman) ###"
            echo "I/Installing pacman packages"
            sudo pacman -S install libxslt p7zip git python-pip lftp
        else
            echo "E/Unsupported LINUX package manager"
            return 1
        fi

        echo "I/Installing awcli"
        sudo pip3 install awscli --upgrade --user
        echo "I/Installing awsebcli"
        sudo pip3 install awsebcli --upgrade --user
        ;;
    *)
        echo "E/Toolset: Unsupported host OS"
        return 1
        ;;
esac
echo "I/Done"
