#!/bin/bash
export HAM_NO_VER_CHECK=1
if [[ -z "$HAM_HOME" ]]; then echo "E/HAM_HOME not set !"; exit 1; fi
. "$HAM_HOME/bin/ham-bash-setenv.sh"

FIX_SCRIPT=$(ham-find-file-up "_fix.sh")
if [ -e "$FIX_SCRIPT" ]; then
    # echo "Running fixer: $FIX_SCRIPT"
    set -x
    pwd
    "$FIX_SCRIPT" "$@"
else
    echo "No _fix.sh found in any parent folder."
    exit 1
fi
